<div class="container">
  <div class="page-header">
    <h3 class="text-center">Formulir Pendaftaran Panitia PKKP PNJ 2016</h3>
  </div>
  <%= bootstrap_form_for(@user, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-10', inline_errors: false) do |f| %>
    <%= f.text_field :name, label: 'Nama Lengkap', placeholder: 'Nama Lengkap' %>
    <%= f.text_field :nim, label: 'NIM', placeholder: 'Nomor Induk Mahasiswa' %>
    <%= f.select :major_id, Major.all.collect { |p| [p.name, p.id] }, label: 'Program Studi', prompt: true %>
    <%= f.date_select :birth, label: 'Tanggal Lahir', order: [:day, :month, :year], start_year: Date.today.year - 30, end_year: Date.today.year - 10, prompt: true %>
    <%= f.text_field :address, label: 'Alamat Tinggal', placeholder: 'Gg. Kelinci No. 2A' %>
    <%= f.email_field :email, label: 'Alamat Email', placeholder: 'e.g. example@gmail.com' %>
    <%= f.text_field :phone, label: 'No. Telepon', placeholder: 'e.g. 08123456789' %>
    <div class="form-group">
      <div class="col-sm-2"></div>
      <div class="col-sm-10">
        <p class="text-muted">Dengan mengeklik <b>Daftar Panitia</b>, Saya bersedia mengikuti kegiatan Panitia PKKP PNJ Tahun 2016.</p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2"></div>
      <div class="col-sm-3">
        <%= f.submit 'Daftar Panitia', class: 'btn btn-success btn-block' %>
      </div>
    </div>
  <% end %>
</div>

